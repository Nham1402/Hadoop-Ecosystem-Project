# Hadoop E-commerce Ecosystem Configuration

# Cluster Configuration
CLUSTER_NAME=hadoop-ecommerce
NAMESPACE=hadoop-ecosystem

# Resource Limits
MASTER_MEMORY=6Gi
MASTER_CPU=3
WORKER_MEMORY=4Gi
WORKER_CPU=2
WORKER_REPLICAS=2

# Hadoop Configuration
HADOOP_VERSION=3.3.4
HADOOP_HOME=/opt/hadoop
HADOOP_CONF_DIR=/opt/hadoop/etc/hadoop
HDFS_NAMENODE_USER=hdfs
HDFS_DATANODE_USER=hdfs
YARN_RESOURCEMANAGER_USER=yarn
YARN_NODEMANAGER_USER=yarn

# Spark Configuration
SPARK_VERSION=3.4.1
SPARK_HOME=/opt/spark
SPARK_MASTER_PORT=7077
SPARK_MASTER_WEBUI_PORT=8080
SPARK_WORKER_WEBUI_PORT=8081
SPARK_HISTORY_SERVER_PORT=18080

# Kafka Configuration
KAFKA_VERSION=2.8.2
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092
KAFKA_LOG_RETENTION_HOURS=168

# Hive Configuration
HIVE_VERSION=3.1.3
HIVE_METASTORE_PORT=9083
HIVE_SERVER2_PORT=10000
HIVE_METASTORE_DB=postgresql

# HBase Configuration
HBASE_VERSION=2.5.5
HBASE_MASTER_PORT=16000
HBASE_MASTER_INFO_PORT=16010
HBASE_REGIONSERVER_PORT=16020
HBASE_REGIONSERVER_INFO_PORT=16030

# Cassandra Configuration
CASSANDRA_VERSION=4.1.3
CASSANDRA_CLUSTER_NAME=ecommerce-cluster
CASSANDRA_SEEDS=cassandra-0.cassandra
CASSANDRA_LISTEN_ADDRESS=0.0.0.0

# Airflow Configuration
AIRFLOW_VERSION=2.7.1
AIRFLOW_HOME=/opt/airflow
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_EXECUTOR=CeleryExecutor
AIRFLOW_DATABASE_URL=postgresql://airflow:airflow@postgres:5432/airflow

# Database Configuration
POSTGRES_VERSION=13
POSTGRES_DB=metastore
POSTGRES_USER=hive
POSTGRES_PASSWORD=hivepassword

# Monitoring Configuration
PROMETHEUS_VERSION=2.45.0
GRAFANA_VERSION=10.1.0
ELASTICSEARCH_VERSION=8.9.0
KIBANA_VERSION=8.9.0

# Security Configuration
SECURITY_ENABLED=false
KERBEROS_ENABLED=false
SSL_ENABLED=false

# Storage Configuration
STORAGE_CLASS=local-storage
HDFS_REPLICATION_FACTOR=2
HDFS_BLOCK_SIZE=134217728

# Network Configuration
CLUSTER_DOMAIN=cluster.local
INGRESS_ENABLED=true
INGRESS_CLASS=nginx

# Registry Configuration
DOCKER_REGISTRY=localhost:5000
IMAGE_PULL_POLICY=Always